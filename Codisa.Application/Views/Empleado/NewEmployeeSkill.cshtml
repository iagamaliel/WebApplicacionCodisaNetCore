@model Codisa.Application.Models.Empleado.CreateEmployeeSkill

@{
    ViewData["Title"] = "NewEmployeeSkill";
}

<h4>Agregar Habilidad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveEmployeeSkill">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="IdEmpleado" type="hidden" />
            <div class="form-group">
                <label asp-for="NombreHabilidad" class="control-label">Habilidad</label>
                <select asp-for="NombreHabilidad" class="form-control">
                    <option value="SQL Server">SQL Server</option>
                    <option value="SubVersion">SubVersion</option>
                    <option value="Java">Java</option>
                </select>
                <span asp-validation-for="NombreHabilidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
